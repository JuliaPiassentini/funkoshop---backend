<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="../../css/index.css" />
    <link rel="icon" href="../../img/branding/favicon.png" />
  </head>
  <body>
    <!--   Inicio Header   -->
    <%- include('../partials/header') %>

    <!--   Fin Header   -->
    <!-- Aside -->
    <div class="contenedor container">
      <aside class="sidebar">
        <div>
          <div class="sidebar__buscar">
            <label for="buscar">BUSCAR</label>
            <input
              class="sidebar__buscar__place"
              type="text"
              placeholder=" item o categoria"
            />
          </div>
          <div class="sidebar__ordenar">
            <label for="ordenar por">ORDENAR POR</label>
            <select name="" id="" class="sidebar__ordenar__place">
              <option value="">Mayor a menor</option>
              <option value="">Menor a mayor</option>
              <option value="">A-Z</option>
              <option value="">Z-A</option>
            </select>
          </div>
          <p>PRECIO</p>
          <div class="sidebar__precio">
            <label for="">MIN</label>
            <input
              class="sidebar__precio__place"
              type="number"
              placeholder="0"
            />
            <label for="">MAX</label>
            <input
              class="sidebar__precio__place"
              type="number"
              placeholder="0"
            />
          </div>
          <p>FILTRAR</p>
          <div class="sidebar__filtrar">
            <!-- <label for="filtrar">FILTRAR</label> -->
            <ul class="sidebar__filtrar__lista">
              <li>
                <input type="checkbox" name="filtrar" />
                <label for="nuevos">NUEVOS</label>
              </li>
              <li>
                <input type="checkbox" name="filtrar" />
                <label for="ofertas">OFERTAS</label>
              </li>
              <li>
                <input type="checkbox" name="filtrar" />
                <label for="edicion_especial">EDICIÓN ESPECIAL</label>
              </li>
              <li>
                <input type="checkbox" name="filtrar" />
                <label for="favoritos">FAVORITOS</label>
              </li>
            </ul>
          </div>
        </div>
      </aside>
      <!-- Main -->
      <main>
        <section class="slider container">
          <ul class="slider__items">
            <% items.forEach( item => { %>
            <li class="slider__item">
              <article class="card-item">
                <a class="card-item__link" href="">
                  <picture class="card-item__cover">
                    <span class="card-item__tag">Nuevo</span>
                    <img
                      class="card-item__img--front"
                      src="<%= item.img_front %>""
                      alt=<%= item.product_description %>
                    />
                    <img
                      class="card-item__img--back"
                      src="<%= item.img_back %>""
                      alt="<%= item.product_description %> en caja"
                    />
                  </picture>
                  <div class="card-item__content">
                    <p class="card-item__licence"><%= item.licence_name %></p>
                    <h4 class="card-item__name"><%= item.product_name %></h4>
                    <p class="card-item__price">$ <%= item.product_price %></p>
                    <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                  </div>
                </a>
              </article>
            </li>
            <% }); %>
          </ul>
        </section>

        <section class="paginacion">
          <ul class="paginacion__lista">
            <li class="paginacion__lista__boton"><a href=""><</a></li>
            <li class="paginacion__lista__boton"><a href="">1</a></li>
            <li class="paginacion__lista__boton"><a href="">2</a></li>
            <li class="paginacion__lista__boton"><a href="">...</a></li>
            <li class="paginacion__lista__boton"><a href="">9</a></li>
            <li class="paginacion__lista__boton"><a href="">10</a></li>
            <li class="paginacion__lista__boton"><a href="">></a></li>
          </ul>
        </section>
      </main>
    </div>
    <!--FOOTER-->
    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script src="../../js/glide.js"></script>
  </body>
</html>

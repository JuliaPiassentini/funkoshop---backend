<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="../../css/index.css" />
    <link rel="icon" href="../../img/branding/favicon.png" />
  </head>
  <body>
    <!--   Inicio Header   -->
    <%- include('../partials/header') %>
    <!--   Fin Header   -->
    <!-- Main -->
    <main class="main container">
      
      <section class="item__container">
        
        <picture class="card-item__cover"
          ><!--Sentido semántico-->
          <img
            class="card-item__img--front"
            src="<%= item.image_front %>"
            alt="<%= item.product_description %>"
          />
          <img
            class="card-item__img--back"
            src="<%= item.image_back %>"
            alt="<%= item.product_description %> en caja"
          />
        </picture>
        <article class="item__info">
          <p class="item__licence" style="text-transform: uppercase;" ><%= item.licence_name %></p>
          <h2 class="item__name"><%= item.product_name %></h2>
          <p class="item__description">
            <%= item.licence_description %>
          </p>
          <p class="item__price">$ <%= item.price %></p>
          <div class="item__cart">
            <input
              class="item__input"
              type="text"
              name="quantity"
              id="quantity"
              placeholder="0"
            />
            <div class="item__quantity">
              <button id="subtract" class="item__quantitymenos" type="button">
                -
              </button>
              <button id="add" class="item__quantitymas" type="button">
                +
              </button>
            </div>

            <button
              class="item__submit btn btn--primary btn--medium"
              type="submit"
            >
              Agregar al carrito
            </button>
          </div>
          <p class="item__promo">
            <a href="">Ver métodos de pago</a> - 3 CUOTAS SIN INTERÉS
          </p>
        </article>
    
      </section>
     
      <section class="slider glide container">
        <h2 class="slider__title">PRODUCTOS RELACIONADOS</h2>
        <div class="glide__track" data-glide-el="track">
          <ul class="glide__slides">
            <% productsRel.forEach( product => { %>
              <li class="glide__slide">
                <article class="card-item">
                  <a class="card-item__link" href="">
                    <picture class="card-item__cover">
                      <span class="card-item__tag">Nuevo</span>
                      <img
                        class="card-item__img--front"
                        src="<%= product.image_front %>"
                        alt="Figura coleccionable  <%= product.product_name %>"
                      />
                      <img
                        class="card-item__img--back"
                        src="<%= product.image_back %>"
                        alt="Figura coleccionable <%= product.image_back %>en caja"
                      />
                    </picture>
                    <div class="card-item__content">
                      <p class="card-item__licence" style="text-transform: uppercase;"><%= item.licence_name %></p>
                      <h4 class="card-item__name"><%= product.product_name %></h4>
                      <p class="card-item__price">$ <%= product.price %></p>
                      <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                    </div>
                  </a>
                </article>
              </li>
              <% }); %>
          
          </ul>
        </div>
        <div class="glide__arrows" data-glide-el="controls">
          <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
            <iconify-icon icon="tabler:chevron-left"></iconify-icon>
          </button>
          <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
            <iconify-icon icon="tabler:chevron-right"></iconify-icon>
          </button>
        </div>
      </section>
    </main>

    <!--FOOTER-->
    <%- include('../partials/footer') %>


    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script src="../../js/glide.js"></script>
    <script src="../../js/item.js"></script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="../../css/index.css" />
    <link rel="icon" href="../../img/branding/favicon.png" />
  </head>
  <body>
    <!--   Inicio Header   -->
    <%- include('../partials/header') %>
    <!--Fin Header-->
    <div class="form__container">
      <form id="formulario" action="/auth/login" method="post" target="_blank">
        <h2>INGRESAR A MI CUENTA</h2>

        <div class="form-group">
          <div class="input_log">
            <label for="email">Email:</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="johndoe@correo.com"
            />
          </div>

          <div class="error-message" id="emailError"></div>
        </div>
        <div class="form-group">
          <div class="input_log pass">
            <label for="password">Contraseña:</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="••••••••••••••••••"
              required
            />
          </div>

          <div class="error-message" id="passwordError"></div>
        </div>
        <div class="input_box">
          <button type="submit">Ingresar</button>
          <label
            ><input
              type="checkbox"
              name="recordarContraseña"
              value="Recordarme"
              class="mycheck"
            />Recordarme</label
          >
        </div>
        <div class="form_pass">
          <a href="#">Olvidé mi contraseña</a>
        </div>
      </form>
    </div>

    <!--Footer-->
    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="../../scripts/form_login.js"></script>
  </body>
</html>
